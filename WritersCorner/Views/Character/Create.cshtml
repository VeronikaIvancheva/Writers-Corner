                <div class="form-group">
                    <label asp-for="SkillsTheyLack" class="control-label"><strong>Skills they lack</strong></label>
                    <input asp-for="SkillsTheyLack" class="form-control" />
                    <span asp-validation-for="SkillsTheyLack" class="text-danger"></span>
                </div>
