                    <input asp-for="Birthday" class="form-control" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Death" class="control-label"><strong>Death</strong> (date and/or cause)</label>
                    <input asp-for="Death" class="form-control" />
                    <span asp-validation-for="Death" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="Bond" class="control-label"><strong>Bond</strong> (physical, spiritual/mental)</label>
                    <input asp-for="Bond" class="form-control" />
                    <span asp-validation-for="Bond" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="Disabilities" class="control-label"><strong>Disabilities</strong></label>
                    <input asp-for="Disabilities" class="form-control" />
                    <span asp-validation-for="Disabilities" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="Occupation" class="control-label"><strong>Occupation</strong></label>
                    <input asp-for="Occupation" class="form-control" />
                    <span asp-validation-for="Occupation" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="Profession" class="control-label"><strong>Professions</strong></label>
                    <input asp-for="Profession" class="form-control" />
                    <span asp-validation-for="Profession" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="Hobbies" class="control-label"><strong>Hobbies</strong></label>
                    <input asp-for="Hobbies" class="form-control" />
                    <span asp-validation-for="Hobbies" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-12">
