        <h2>Physical and special abilities</h2>
        <div class="col-sm-12">
            <div class="form-group">
                <label asp-for="AthleticAbility" class="control-label"><strong>Athletic ability</strong></label>
                <input asp-for="AthleticAbility" class="form-control" />
                <span asp-validation-for="AthleticAbility" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <label asp-for="SpecialAblilty" class="control-label"><strong>Special ablilty</strong></label>
                <input asp-for="SpecialAblilty" class="form-control" />
                <span asp-validation-for="SpecialAblilty" class="text-danger"></span>
            </div>
        </div>
        <p></p>


        <h2>Face and head characteristic</h2>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="EyeColor" class="control-label"><strong>Eyes color</strong></label>
                    <input asp-for="EyeColor" class="form-control" />
