                    <span asp-validation-for="Odds" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="Trait" class="control-label"><strong>Trait</strong></label>
                    <input asp-for="Trait" class="form-control" />
                    <span asp-validation-for="Trait" class="text-danger"></span>
