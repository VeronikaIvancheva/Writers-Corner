        <h2>Physical traits</h2>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="SkinTone" class="control-label"><strong>Skin tone</strong></label>
                    <input asp-for="SkinTone" class="form-control" />
                    <span asp-validation-for="SkinTone" class="text-danger"></span>
