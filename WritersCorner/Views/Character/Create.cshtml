@model CharacterViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Character</h1>

<form asp-controller="Character" asp-action="Create" method="post" EncType="multipart/form-data">
    <p></p>

    <h2>Overall</h2>
    <div class="row">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"><strong>Name</strong></label>
