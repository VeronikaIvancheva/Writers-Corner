                    <input asp-for="Birthmarks" class="form-control" />
                    <span asp-validation-for="Birthmarks" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Scars" class="control-label"><strong>Scars</strong></label>
